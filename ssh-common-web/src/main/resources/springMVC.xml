    <!-- 配置文件上传解析器 -->
    <bean class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="20480"/>
    </bean>

    <!-- 配置JSON转换器(如果使用的是<mvc:annotation-driven />自动注入方式则不用配置) -->
    <!--
